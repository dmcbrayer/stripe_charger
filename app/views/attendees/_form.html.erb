
<%= form_for(@attendee, url: trip_attendees_path, html: {id: "payment-form"}) do |f| %>
  <% if @attendee.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@attendee.errors.count, "error") %>
      </div>
      <ul>
      <% @attendee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :email %>

  <%= hidden_field_tag :token %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <small>We're only asking for this in case we need to text you trip updates.</small><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <% if @trip.custom? %>
      <%= f.label :amount, "Pay What You Want Amount" %><br>
      <small>This generous trip leader is using a "pay what you want" format, so enter what you think this is worth.</small><br>
      <%= text_field_tag :amount, nil, id: "amount-id" %>
    <% end %>
  </div>


<script src="https://checkout.stripe.com/checkout.js"></script>

  <button id="customButton" class="btn btn-primary">Pay</button>
  
  
  <script>
    var amount;
    var handler = StripeCheckout.configure({
      key: 'pk_test_G09Rb9tZW56ogyWpa1l6s7uV',
      image: 'https://s3.amazonaws.com/stripe-uploads/acct_14dt2kGcwa0Mb04Nmerchant-icon-371728-Hikermeals_03.png',
      token: function(token) {
        // Use the token to create the charge with a server-side script.
        // You can access the token ID with `token.id`
        // console.log(token.id)
        $('#token').val(token.id);
        $('#payment-form').submit();
      }
    });

    $("#amount-id").on('blur', function (e) {
      amount = parseInt($(this).val()) * 100  
    })

    $('#customButton').on('click', function(e) {
      // Open Checkout with further options
      handler.open({
        name: 'Hiker Meals',
        description: '2 widgets',
        zipCode: false,
        amount: amount
      });
      e.preventDefault();
      $('#token').val(token.id)
      // $('#payment-form').submit();
    });

    // Close Checkout on page navigation
    $(window).on('popstate', function() {
      handler.close();
    });
  </script>

<% end %>