<% provide(:title, @trip.title) %>

<p>
  <strong>Title:</strong>
  <%= @trip.title %>
</p>

<p>
  <strong>Leader:</strong>
  <%= link_to @leader.name, @leader %>
</p>

<p>
  <strong>Price:</strong>
  <%= @trip.price %>
</p>

<p>
  <strong>Start Date:</strong>
  <% if @trip.start_date? %>
    <%= @trip.start_date.strftime("%B %d, %Y") %>
  <% else %>
    TBD  
  <% end %>
</p>

<p>
  <strong>End Date:</strong>
  <% if @trip.end_date? %>
    <%= @trip.end_date.strftime("%B %d, %Y") %>
  <% else %>
    TBD
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<%= link_to 'Sign Up', new_trip_attendee_path(@trip), class: 'btn btn-default' %> <br>

<%= link_to 'Back', trips_path %> <br>

<% if @trip_attendees.any? %>
  <h3>Attendees</h3>
  <ul>
    <% @trip_attendees.each do |attendee| %>
      <li><%= attendee.name %></li>
    <% end %>
  </ul>
<% end %>


