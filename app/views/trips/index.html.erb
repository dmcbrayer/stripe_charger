<h1>Listing trips</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.title, trip %></td>
        <td><%= trip.price %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

