<% provide(:title, "Trips") %>

<h1>Listing Trips</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.title, trip %></td>
        <td><%= number_to_currency(trip.price, :unit => "$") %></td>
        
        <% if trip.start_date? %>
          <td><%= trip.start_date.strftime("%m/%d/%Y") %></td>
        <% else %>
          <td>TBD</td>
        <% end %>

        <% if trip.end_date? %>
          <td><%= trip.end_date.strftime("%m/%d/%Y") %></td>
        <% else %>
          <td>TBD</td>
        <% end %>

        <td><%= link_to 'Sign up', new_trip_attendee_path(trip), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


